<div class="container order_wrap">
  <div class="row py-4">
    <div class="col-md-3">
      <%= cl_image_tag @order.campaign.project.photo.key, width: '100%', class: "order-img" %>
    </div>
    <div class="col">
      <h1 class="order-title">Order #<%= @order.id %>    <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>CAMPAIGN</strong> <%= @order.campaign.name %></li>
        <li><strong>INVESTED</strong> <%= humanized_money_with_symbol @order.amount %></li>
        </li>
      </ul>
      <p class="order-text"><!-- some text we want to add --></p>

      <!-- Added this return button, I belive we need to render all user orders in
        the user's dashboard -->

      <%= link_to "Back to project", project_path(@order.campaign.project), class: "btn btn-primary order-button" %>
    </div>
  </div>
</div>