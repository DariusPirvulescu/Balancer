<div id="wraper-show-page">
  <div id="wraper-campaign-content">
      <div class="row">
        <div class="col-lg-12 md-6 sm-3">
          <div id="banner-campaign-content">
            <div id="project-name">
              <h1 class="mb-4" style="text-align:center;margin-top:-40px;"> <%= @project.project_name %> </h1>
            </div>
            <div class="row">
              <div class="col-lg-12 md-6 sm-3">
                <div id="campaign-main-card">
                  <div class="container d-flex">
                    <div id="campaign-photo">
                      <% if @project.campaigns != [] %>
                      <%= cl_image_tag @project.campaigns.last.photo.key, width: 200, height: 200, crop: :fill, :radius => 20  %> <!-- Change to campaign photo-->
                    <% end %>
                    </div>
                    <div id="campaign-card-info">
                      <p><strong>Profile</strong></p> <!-- Change to campaign name-->
                      <p> Community and behavioural change</p>
                      <p> platform redifining your </p>  <!-- Change to campaign description-->
                      <p>relationship with alcohol.</p>
                      <p><strong>Website</strong></p>
                      <span><strong>www.balancer.online</strong></span>
                    </div>
                    <div id="campaign-card-money-info" style= "margin-left: 45px;"> <!-- Change to campaign amount & percentage-->
                      <p><strong>Prentended Investment</strong></p>
                      <p>$$$$$$$$$$$</p>
                      <p><strong>Equity offered</strong></p>
                      <p>$$$$$$$$$$$</p>
                      <p><strong>Campaign Ends:</strong></p> <!-- Change to campaign amount & percentage-->
                      <p>22/11/2020</p>
                      <h6><%= link_to "Start Investing", new_project_path %></h6>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="wraper-side-bar">
    <nav id="sidebar">
      <div class="p-4 pt-5">
        <a href="#" class="img logo rounded-circle mb-5" style="background-image: url('<%= image_path 'Blogo.png' %>');"></a>
        <ul class="list-unstyled components mb-5">
          <li class="active">
            <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Home</a>
            <ul class="collapse list-unstyled" id="homeSubmenu">
              <li>
                <%= link_to "Your Profile", dashboard_path %>
              </li>
            </ul>
          </li>
          <li>
            <%= link_to "Guidelines", about_path %>
          </li>
          <li>
            <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Project</a>
          <ul class="collapse list-unstyled" id="pageSubmenu">
            <li>
              <%= link_to "Add Project", new_project_path %>
            </li>
            <li>
              <% if policy(Project).create? %>
                <%= link_to "Edit Your Project", edit_project_path %>
                <% end %>
            </li>
          </ul>
            <li>
              <%= link_to "Campaign", campaigns_path %>
            </li>
            <li>
              <a href="#">Get in Touch</a>
            </li>
        </ul>
      </div>
    </nav>
    <div id="content" class="p-4 p-md-5">
    <!--<div id="project-name">
      <h1 class="mb-4" style="text-align:center;margin-top:-40px;"> <%= @project.project_name %> </h1>
    </div> -->
    <nav id="nav" class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <button type="button" id="sidebarCollapse" class="btn">
          <i class="fa fa-bars"></i>
            <span class="sr-only">Toggle Menu</span>
        </button>
        <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <i class="fa fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="nav navbar-nav ml-auto">
            <li class="nav-item active">
              <a class="nav-link" href="#category">Category</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#vision">Vision</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#pitch">Pitch</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#target">Target</a>
            </li>
          </ul>
        </div>
    </nav>
    <div id="wraper-project">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 md-6 sm-3">
            <h3><a id="category">Category</a></h3>
            <p><%= @project.category %></p>
            <h3><a id="vision">Vision</a></h3>
            <p><%= @project.vision %></p>
            <h3><a id="pitch">Pitch</a></h3>
            <p><%= @project.pitch %></p>
            <% if @project.photo.attached? %>
            <%= cl_image_tag @project.photo.key, width: 1100, height: 300, crop: :fill  %>
            <% end %>
            <h3><a id="target">Target</a></h3>
            <p><%= @project.target %></p>
          </div>
       </div>
      </div>
    </div>
  </div>
</div>
